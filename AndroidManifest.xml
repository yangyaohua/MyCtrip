<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myctrip"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.activity.WelcomeActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.activity.LoginActivity"
            android:exported="true"></activity>
		<activity android:name="com.example.activity.SearchTicketActivity"
		    android:process="com.example.mydatadriver"
		    android:exported="true"></activity>
        <activity android:name="com.example.activity.BaseActivity"></activity>
        <activity android:name="com.example.activity.SearchResultActivity"></activity>
        <activity android:name="com.example.activity.AddPassengerInfoActivity"
            android:exported="true"></activity>
        <activity android:name="com.example.activity.PayForTicketActivity"
            android:exported="true"></activity>
    </application>

</manifest>
